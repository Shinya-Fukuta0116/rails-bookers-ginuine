<div>
  <%= flash[:notice] %>
<% if @book.errors.any? %>
      <%= @book.errors.count %> errors occurred!
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
<% end %> 
    <h1>Editing Book</h1>
     <%= form_with model: @book do |f| %>
      <div class="field">
        <%= f.label :title, "title" %><br>
        <%= f.text_field :title %>
    </div>
    <div class="field">
        <%= f.label :body, "Body" %><br>
        <%= f.text_area :body %>
    </div>
    <div class="actions">
        <%= f.submit "Update Book"%>
    </div>
  <% end %>
  </div>

<%= link_to "show", book_path(@book.id) %>
<%= link_to "back", books_path %>
