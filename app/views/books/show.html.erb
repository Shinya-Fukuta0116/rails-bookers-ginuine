<div>
  <%= flash[:notice] %>
    <% if @book.errors.any? %>
      <%= @book.errors.count %> errors occurred!
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  <% end %> 
</div>

<p><strong>Title:</strong><%= @book.title %></p>
<p><strong>Body:</strong><%= @book.body %></p>
<%= link_to "edit", edit_book_path(@book.id) %>
